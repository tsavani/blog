  </table>

<div class="row">
<div class="span8 offset0" , id="comment">

<% @comment.each do |c| %>
  <table class="table table-condensed">
  	<tr class="active">
  	<%  @user = User.find(c.user_id) %>
    <td><b>Commented by <%= @user.first_name %> : <b id="time">Created at: <%= c.created_at.strftime("%d %b. %Y")  %></b>
    </b></td>
  </tr>
  <tr>
    <td><%= c.discription %></td>
  </tr>
   <tr>
    <td>
    <%= link_to 'Edit', '#', class: "btn btn-primary" %>
    <%= link_to 'Destroy', comment_path(c), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
   </td>
  </tr>
</table>
<br />
<% end %>
</div></div>
<br />



 <%= form_for Comment.new do |f| %>

  <div>
     <%= f.submit "Comment" , class: "btn btn-large btn-primary"  %>
  </div>
   <br />
 
  <div class="field">
   
    <%= f.text_area :discription %>
  </div>
  
  <div class="field">
      <%= f.hidden_field :post_master_id, :value => session[:post_id] %>
  </div>

   <div class="field">
      <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>

 
<% end %>

 <%= link_to 'Back', post_masters_path, class: "btn btn-large btn-primary"  %>
</div>
</div></div>