<div class="row">
<div class="span12 offset2" , id="profile">
<p id="notice"><%= notice %></p>
<table class="table table-striped">
  <tr>
    <td><h3><%= @post_master.post_name %></h3></td>
  </tr>
  <tr>
    <td><%= @post_master.discription %></td>
  </tr>
